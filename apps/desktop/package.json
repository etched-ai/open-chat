{
    "name": "@repo/desktop",
    "version": "1.0.0",
    "description": "An Electron application with React and TypeScript",
    "main": "./out/main/index.js",
    "author": "Etched",
    "homepage": "https://etched.com",
    "scripts": {
        "format": "biome check . --write",
        "check-format": "biome check .",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "pnpm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "pnpm run build && electron-builder --dir",
        "build:win": "pnpm run build && electron-builder --win",
        "build:mac": "electron-vite build && electron-builder --mac",
        "build:linux": "electron-vite build && electron-builder --linux",
        "ci": "pnpm check-format"
    },
    "dependencies": {
        "@codemirror/commands": "^6.7.1",
        "@codemirror/lang-markdown": "^6.3.0",
        "@codemirror/state": "^6.4.1",
        "@codemirror/view": "^6.34.1",
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "@fastify/cors": "^10.0.1",
        "@fastify/request-context": "^6.0.1",
        "@libsql/client": "^0.14.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.3",
        "@supabase/supabase-js": "^2.46.1",
        "@tanstack/react-router": "^1.77.8",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "electron-updater": "^6.1.7",
        "enochian-js": "^0.0.3",
        "fastify": "^5.0.0",
        "lucide-react": "^0.454.0",
        "luxon": "^3.5.0",
        "react-markdown": "^9.0.1",
        "remark-gfm": "^4.0.0",
        "replicache": "^15.0.1",
        "replicache-react": "^5.0.1",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7",
        "ulid": "^2.3.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@repo/tsconfig": "workspace:*",
        "@tanstack/router-devtools": "^1.77.8",
        "@tanstack/router-plugin": "^1.77.7",
        "@types/luxon": "^3.4.2",
        "@types/node": "^20.14.8",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "electron": "^31.0.2",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.3.0",
        "postcss": "^8.4.47",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.14",
        "typescript": "^5.5.2",
        "vite": "^5.3.1",
        "vite-plugin-node-polyfills": "^0.22.0"
    }
}
