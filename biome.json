{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "ignore": [
            "apps/desktop/src/renderer/src/routeTree.gen.ts",
            "./src/renderer/src/routeTree.gen.ts",
            "apps/desktop/tailwind.config.js",
            "apps/desktop/out",
            "apps/desktop/dist",
            "**/node_modules"
        ]
    },
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUselessElse": "off"
            }
        }
    }
}
